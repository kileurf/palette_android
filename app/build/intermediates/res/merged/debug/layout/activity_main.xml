<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/titre_palette"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="36dp"
        android:layout_weight="0.14" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/spinner"
        android:layout_weight="0.14"
        android:backgroundTint="#d55a5a"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/color_name"
        android:id="@+id/demo"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_weight="0.14" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/chercher"
        android:id="@+id/lookup"
        android:layout_weight="0.14"
        android:textSize="18dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14">

        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:text="@string/LabelRouge"
            android:id="@+id/textView3"
            android:textSize="24dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Rouge"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:inputType="none|number"
            android:ems="10"
            android:id="@+id/EditRouge"
            android:enabled="true"
            android:editable="false"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14">

        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:text="@string/LabelVert"
            android:id="@+id/textView4"
            android:textSize="24dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Vert"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:inputType="none|number"
            android:ems="10"
            android:id="@+id/EditVert"
            android:enabled="true"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14">

        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:text="@string/LabelBleu"
            android:id="@+id/textView5"
            android:textSize="24dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Bleu"
            android:indeterminate="false"
            android:layout_weight="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="62dp"
            android:inputType="none|number"
            android:ems="10"
            android:id="@+id/EditBleu"
            android:editable="false"
            android:enabled="true"
            android:textSize="24dp" />
    </LinearLayout>
</LinearLayout>
